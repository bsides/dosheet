<h1>Listing list_associations</h1>

<table>
  <thead>
    <tr>
      <th>First list</th>
      <th>Second list</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_associations.each do |list_association| %>
      <tr>
        <td><%= list_association.first_list_id %></td>
        <td><%= list_association.second_list_id %></td>
        <td><%= link_to 'Show', list_association %></td>
        <td><%= link_to 'Edit', edit_list_association_path(list_association) %></td>
        <td><%= link_to 'Destroy', list_association, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

