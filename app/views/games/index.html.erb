<h1>Listing games</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>System</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.system.name %></td>
        <td><%= link_to 'Show', game, :id => 'show', :class => 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_game_path(game), :class => 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path, :class => 'btn btn-default' %>
<script>
  $('table').on('click', 'tr', function() {
    var path = $(this).find('#show').attr('href');
    Turbolinks.visit(path);
  });
</script>
