<%= simple_form_for(@level) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :level, collection: 0...6, include_blank: false %>
    <%= f.input :description %>
    <%= f.association :power %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn btn-default' %>
  </div>
<% end %>
