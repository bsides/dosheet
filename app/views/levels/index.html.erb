<h1>Listing levels</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <!-- <th>Description</th> -->
      <th>Power</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @levels.each do |level| %>
      <tr>
        <td><%= level.name %></td>
        <td><%= level.level %></td>
        <!-- <td><%#= level.description %></td> -->
        <td><%= level.power.name %></td>
        <td><%= link_to 'Show', level, :id => 'show', :class => 'btn btn-default' %></td>
        <td><%= link_to 'Edit', edit_level_path(level), :class => 'btn btn-default' %></td>
        <td><%= link_to 'Destroy', level, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Level', new_level_path, :class => 'btn btn-default' %>
<script>
  $('table').on('click', 'tr', function() {
    var path = $(this).find('#show').attr('href');
    Turbolinks.visit(path);
  });
</script>
